<div class="showpage">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>product one</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Shirt with Logo</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= @product.image_url %>
  </p>

  <p>
  	<strong>Colour</strong>
  	<%= @product.colour %>
  </p>
  <p>
  	<strong>Price</strong>
  	<%= @product.price %>
  </p>
  <%= render partial: 'new_comment' %>
  <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
  
  <div class="product-reviews">
    <% @comments.each do |comment| %>
      <div class="row">
        <hr>
        <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
        <p><%= "Rating: #{comment.rating}/5" %></p>
        <p><%= comment.body %></p>
      </div>
    <% end %>
  </div>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>